            justify-content: center;
            min-height: 100vh;
            margin: 0;
            overflow-x: hidden; /* Предотвратить горизонтальную прокрутку */
        }

        .game-wrapper {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            align-items: flex-start;
            gap: 30px;
            padding: 20px;
            max-width: 100%;
        }

        .main-content {
            display: flex;
            flex-direction: column;
