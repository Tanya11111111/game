    <style>
        :root {
            /* Размер сетки - 5x5 домов.
              Это создает 6x6 пересечений (от 0 до 5).
            */
            --grid-size: 5;
            --cell-size: 11vmin;
            --board-size: calc(var(--grid-size) * var(--cell-size));
            --car-color: #e74c3c;
            --road-color: #bdc3c7;
            --building-color: #34495e;
            --building-roof: #3498db;
            --target-color: #f1c40f;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: #ecf0f1;
            color: #2c3e50;
