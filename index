        }

        .stats {
            font-size: 1.2rem;
            width: 100%;
            text-align: center;
            margin-bottom: 20px;
            min-height: 1.5em; /* Резерв места для счетчика */
        }

        #move-count {
            font-weight: 700;
        }

        .game-board {
            width: var(--board-size);
            height: var(--board-size);
            background-color: var(--road-color);
            /* Рисуем сетку дорог. Размер фона - var(--cell-size).
              Это создает 5x5 "кварталов", разделенных дорогами.
            */
            background-image:
                linear-gradient(#ecf0f1 2px, transparent 2px),
                linear-gradient(90deg, #ecf0f1 2px, transparent 2px);
            background-size: var(--cell-size) var(--cell-size);
            position: relative;
            border: 2px solid #95a5a6;
            border-radius: 8px;
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
            overflow: hidden; /* Скрыть все, что выходит за пределы */
        }

        .house {
            position: absolute;
            width: var(--cell-size);
            height: var(--cell-size);
            /* Используем CSS-переменные для позиционирования.
              Дом (r, c) будет в левом верхнем углу (top, left).
            */
            left: calc(var(--col) * var(--cell-size));
            top: calc(var(--row) * var(--cell-size));
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

        .house:hover {
            transform: scale(1.05);
        }

        .house-inner {
            width: 70%;
            height: 60%;
            background-color: var(--building-color);
            border-radius: 0 0 4px 4px;
            position: relative;
            /* Убраны flex-свойства для ручного позиционирования */
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

        /* Номер дома */
        .house-number {
            position: absolute;
            top: 5px;
            left: 0;
            width: 100%;
            text-align: center;
            font-size: 1.2rem; /* Немного уменьшен */
            font-weight: 700;
            color: white;
            z-index: 2;
        }

        /* Окно дома - УДАЛЕНО */
        /* .house-window { ... } */
        
        /* Дверь дома - УДАЛЕНО */
        /* .house-inner::after { ... } */

        /* Крыша дома с помощью псевдо-элемента - ИЗМЕНЕНО */
        .house-inner::before {
            content: '';
            position: absolute;
            bottom: 100%; /* Располагаем над домом */
            left: 50%; /* Центрируем */
            transform: translateX(-50%); /* Точное центрирование */
            width: 0;
            height: 0;
            /* Основание треугольника (0.35 + 0.35 = 0.7, 
               что равно 70% ширины .house-inner) */
            border-left: calc(var(--cell-size) * 0.35) solid transparent;
            border-right: calc(var(--cell-size) * 0.35) solid transparent;
            /* Высота треугольника */
            border-bottom: calc(var(--cell-size) * 0.25) solid var(--building-roof);
        }

        .house.target .house-inner {
            background-color: var(--target-color);
            color: #333;
        }

        .house.target .house-inner::before {
            border-bottom-color: #f39c12;
        }

        #car {
            position: absolute;
            /* Позиционируем машину на пересечениях (0-5) */
            left: calc(var(--x) * var(--cell-size));
            top: calc(var(--y) * var(--cell-size));
            width: calc(var(--cell-size) * 0.6);
            height: calc(var(--cell-size) * 0.6);
            
            transition: left 0.5s ease-in-out, 
                        top 0.5s ease-in-out, 
                        transform 0.3s ease-in-out;

            /* Центрируем машину на точке пересечения (left, top)
              и поворачиваем ее.
              Начальное направление (dir=1) -> (1-1)*90 = 0 deg.
            */
            transform: translate(-50%, -50%) rotate(calc((var(--dir) - 1) * 90deg));
            z-index: 10;
        }

        /* Анимация "врезания" в стену */
        #car.bumper {
            animation: bumper 0.3s ease-out;
        }
        @keyframes bumper {
            0% { transform: translate(-50%, -50%) rotate(calc((var(--dir) - 1) * 90deg)) scale(1); }
            50% { transform: translate(-50%, -50%) rotate(calc((var(--dir) - 1) * 90deg)) scale(1.1); }
            100% { transform: translate(-50%, -50%) rotate(calc((var(--dir) - 1) * 90deg)) scale(1); }
        }

        .controls {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 15px;
            width: 350px;
            max-width: 90vw;
            margin-top: 20px;
        }

        .control-button {
            padding: 20px;
            font-size: 1.2rem;
            font-weight: 700;
            font-family: 'Noto Sans KR', sans-serif;
            background-color: #fff;
            color: #2c3e50;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
            transition: all 0.2s ease;
            /* Новые стили для центрирования стрелки и текста */
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

        .control-button:hover {
            background-color: #3498db;
            color: white;
            transform: translateY(-2px);
        }

        /* Кнопка "Вперед" (직진) */
        .control-button[data-command="straight"] {
            /* Убрано свойство grid-column: 1 / -1; */
            background-color: #2ecc71;
            color: white;
        }
        .control-button[data-command="straight"]:hover {
            background-color: #27ae60;
        }
        
        /* Кнопка "Разворот" (유턴) */
        .control-button[data-command="u-turn"] {
            background-color: #e67e22;
            color: white;
        }
        .control-button[data-command="u-turn"]:hover {
            background-color: #d35400;
        }

        .message-box {
            position: fixed;
            top: -100px; /* Скрыто за экраном */
            left: 50%;
            transform: translateX(-50%);
            padding: 15px 30px;
            background-color: var(--car-color);
            color: white;
            font-size: 1.1rem;
            font-weight: 700;
            border-radius: 0 0 10px 10px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
            transition: top 0.4s ease-in-out;
            z-index: 100;
        }

        .message-box.show {
            top: 0;
        }

        .message-box.success {
            background-color: #2ecc71;
        }
        
        .message-box.info {
            background-color: #3498db;
        }

        /* Адаптивность */
        @media (max-width: 768px) {
            .game-wrapper {
                flex-direction: column;
                align-items: center;
                gap: 20px;
            }
            .controls {
                width: 90vw;
            }
            :root {
                --cell-size: 15vmin;
            }
            h1 {
                font-size: 2rem;
            }
        }

