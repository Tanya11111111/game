<body>

    <div class="game-wrapper">
        <div class="main-content">
            <!-- Текст заменен на корейский -->
            <h1>피자 배달 게임</h1>
            <div class="stats">
                <span id="stats-text">배달할 집을 선택하세요!</span>
            </div>
            
            <div class="game-board" id="game-board">
                <!-- SVG-машинка заменена на SVG-пиццу -->
                <svg id="car" viewBox="0 0 100 100" style="--x: 0; --y: 0; --dir: 1;">
                    <!-- Корочка (Коричневая дуга) -->
                    <path d="M 20 20 A 60 60 0 0 1 20 80" fill="none" stroke="#d2b48c" stroke-width="15"/>
                    <!-- Кусок (Желтый треугольник) - та же форма, что и у машины -->
                    <path d="M 20 20 L 80 50 L 20 80 z" fill="#f1c40f"/>
                    <!-- Пепперони -->
                    <circle cx="45" cy="35" r="7" fill="#e74c3c"/>
                    <circle cx="45" cy="65" r="7" fill="#e74c3c"/>
                    <circle cx="60" cy="50" r="7" fill="#e74c3c"/>
                </svg>
                <!-- Дома будут добавлены здесь через JS -->
            </div>
        </div>

        <div class="controls">
            <!-- Убран русский текст, добавлены стрелки -->
            <button class="control-button" data-command="straight">&uarr; 직진하세요</button>
            <button class="control-button" data-command="u-turn">&#8634; 유턴하세요</button>
            <button class="control-button" data-command="left">&larr; 좌회전하세요</button>
            <button class="control-button" data-command="right">&rarr; 우회전하세요</button>
        </div>
    </div>

    <!-- Сообщение для игрока -->
    <div id="message-box" class="message-box">Сообщение</div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const GAME_SIZE = 5; // 5x5 домов, 6x6 пересечений (0-5)
            const NUM_HOUSES = 7; // Количество домов

            const gameBoard = document.getElementById('game-board');
            const carElement = document.getElementById('car');
            const statsText = document.getElementById('stats-text');
            const messageBox = document.getElementById('message-box');
            const controlButtons = document.querySelectorAll('.control-button');

            let car = { x: 0, y: 0, dir: 1 }; // 0:вверх, 1:вправо, 2:вниз, 3:влево
            let houses = [];
            let targetHouse = null;
            let moveCount = 0;
            let isAnimating = false;

            function initGame() {
                gameBoard.innerHTML = ''; // Очистить старые дома
                gameBoard.appendChild(carElement); // Вернуть машину
                houses = [];
                targetHouse = null;
                moveCount = 0;
                isAnimating = false;
                
                createHouses();
                renderHouses();
                placeCar(3, 5, 0); // Начальная позиция: (3,5), направление: вверх (0)
                updateStats();
            }

            function createHouses() {
                const positions = new Set();
                let houseNumber = 1;
                while (houses.length < NUM_HOUSES) {
                    const row = Math.floor(Math.random() * GAME_SIZE);
                    const col = Math.floor(Math.random() * GAME_SIZE);
                    const posKey = `${row}-${col}`;

                    // Не ставим дом на стартовую позицию машины
                    if ((row === 4 && col === 2) || (row === 4 && col === 3)) continue;

                    if (!positions.has(posKey)) {
                        positions.add(posKey);
                        houses.push({ row, col, num: houseNumber++ });
                    }
                }
            }

            function renderHouses() {
                houses.forEach(house => {
                    const houseEl = document.createElement('div');
                    houseEl.className = 'house';
                    houseEl.style.setProperty('--row', house.row);
                    houseEl.style.setProperty('--col', house.col);
                    
                    const houseInner = document.createElement('div');
                    houseInner.className = 'house-inner';
                    
                    // Убрано создание окна
                    const numSpan = document.createElement('span');
                    numSpan.className = 'house-number';
                    numSpan.textContent = house.num;
                    
                    houseInner.appendChild(numSpan);
                    /* Убрано: houseInner.appendChild(windowSpan); */
                    
                    houseEl.appendChild(houseInner);
                    
                    houseEl.addEventListener('click', () => selectTarget(house, houseEl));
                    gameBoard.appendChild(houseEl);
                    house.element = houseEl; // Сохраняем ссылку на DOM-элемент
                });
            }

            function selectTarget(house, element) {
                if (isAnimating) return;

                // Снять выделение с предыдущей цели
                if (targetHouse && targetHouse.element) {
                    targetHouse.element.classList.remove('target');
                }

                // Установить новую цель
                targetHouse = house;
                targetHouse.element = element;
                targetHouse.element.classList.add('target');
                
                moveCount = 0;
                updateStats();
                // Текст заменен на корейский
                showMessage(`집 #${targetHouse.num} 선택 완료. 출발!`, 'info');
            }

            function updateStats() {
                if (targetHouse) {
                    // Текст заменен на корейский
                    statsText.innerHTML = `집: <b style="color: var(--target-color);">${targetHouse.num}</b> | 이동: <b id="move-count">${moveCount}</b>`;
                } else {
                    // Текст заменен на корейский
                    statsText.innerHTML = '배달할 집을 선택하세요!';
                }
            }

            function placeCar(x, y, dir) {
                car.x = x;
                car.y = y;
                car.dir = dir;

                carElement.style.setProperty('--x', car.x);
                carElement.style.setProperty('--y', car.y);
                
                // (dir - 1) * 90: (1-1)*90=0 (вправо), (2-1)*90=90 (вниз), (3-1)*90=180 (влево), (0-1)*90=-90 (вверх)
                const rotation = (car.dir - 1) * 90;
                carElement.style.transform = `translate(-50%, -50%) rotate(${rotation}deg)`;
            }

            function handleCommand(command) {
                if (isAnimating) return;
                
                if (!targetHouse) {
                    // Текст заменен на корейский
                    showMessage('먼저 집을 선택하세요!', 'error');
                    return;
                }

                isAnimating = true;
                moveCount++;
                updateStats();

                let turnDuration = 300; // Длительность для поворотов (0.3с из CSS)
                let moveDuration = 500; // Длительность для движения (0.5с из CSS)

                // 1. Выполнить поворот (если нужен)
                switch (command) {
                    case 'left':
                        car.dir = (car.dir + 3) % 4; // +3 это то же самое, что -1 (поворот налево)
                        placeCar(car.x, car.y, car.dir);
                        break;
                        
                    case 'right':
                        car.dir = (car.dir + 1) % 4; // Поворот направо
                        placeCar(car.x, car.y, car.dir);
                        break;

                    case 'u-turn':
                        car.dir = (car.dir + 2) % 4; // Разворот
                        placeCar(car.x, car.y, car.dir);
                        break;
                    
                    case 'straight':
                        turnDuration = 0; // Нет поворота, сразу едем
                        break;
                }

                // 2. Выполнить движение (после завершения анимации поворота)
                setTimeout(() => {
                    const { dx, dy } = getDirectionVector();
                    const nextX = car.x + dx;
                    const nextY = car.y + dy;

                    // Проверка границ (от 0 до 5 включительно)
                    if (nextX < 0 || nextX > GAME_SIZE || nextY < 0 || nextY > GAME_SIZE) {
                        // "Врезались"
                        showBumperAnimation();
                        moveCount--; // Отменяем ход
                        updateStats();
                        isAnimating = false;
                    } else {
                        // Двигаемся
                        placeCar(nextX, nextY, car.dir);
                        
                        // Ждем окончания анимации движения
                        setTimeout(() => {
                            isAnimating = false;
                            checkWin(); // Проверяем победу после остановки
                        }, moveDuration);
                    }
                }, turnDuration); // Ждем, пока закончится поворот
            }
            
            function getDirectionVector() {
                let dx = 0, dy = 0;
                if (car.dir === 0) dy = -1; // Вверх
                else if (car.dir === 1) dx = 1; // Вправо
                else if (car.dir === 2) dy = 1; // Вниз
                else if (car.dir === 3) dx = -1; // Влево
                return { dx, dy };
            }

            function showBumperAnimation() {
                carElement.classList.add('bumper');
                // Текст заменен на корейский
                showMessage('충돌! 길에서 벗어났습니다!', 'error');
                carElement.addEventListener('animationend', () => {
                    carElement.classList.remove('bumper');
                }, { once: true });
            }

            function checkWin() {
                if (!targetHouse) return;

                const { row, col } = targetHouse;
                const { x, y } = car;

                // Дом (r, c) окружен 4-мя пересечениями:
                // (c, r), (c+1, r), (c, r+1), (c+1, r+1)
                // Машина победила, если ее (x, y) совпадает с одним из них.
                
                const atTopLeft = (x === col && y === row);
                const atTopRight = (x === col + 1 && y === row);
                const atBottomLeft = (x === col && y === row + 1);
                const atBottomRight = (x === col + 1 && y === row + 1);

                if (atTopLeft || atTopRight || atBottomLeft || atBottomRight) {
                    // Текст заменен на корейский
                    showMessage(`피자 배달 완료! 이동: ${moveCount}`, 'success');
                    targetHouse.element.classList.remove('target');
                    targetHouse = null;
                    moveCount = 0;
                    // Не сбрасываем счетчик, а просто обновляем текст
                    setTimeout(updateStats, 100); 
                }
            }

            function showMessage(text, type = 'error') {
                messageBox.textContent = text;
                messageBox.className = 'message-box show';
                
                // Типы: error (по умолчанию), success, info
                if (type === 'success') {
                    messageBox.classList.add('success');
                } else if (type === 'info') {
                    messageBox.classList.add('info');
                }

                // Скрыть сообщение через 3 секунды
                setTimeout(() => {
                    messageBox.classList.remove('show');
                }, 3000);
            }

            // Навешиваем обработчики на кнопки
            controlButtons.forEach(button => {
                button.addEventListener('click', () => {
                    handleCommand(button.dataset.command);
                });
            });

            // Запускаем игру
            initGame();
        });
    </script>
</body>
</html>
